@{
    ViewBag.Title = "About";
}
<html>
<head>
    @*<meta name="viewport" content="width=device-width, initial-scale=1">*@
    <link rel="stylesheet" href="~/Content/viewtest.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function fetchDatabaseList() {
            $.ajax({
                url: "/Home/GetDatabaseList",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    // debugger;
                    console.log(result);
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }

        function authenticateUser() {
            let password = document.getElementById("in2").value;
            let login = document.getElementById("in1").value;
            console.log(password);
            $.ajax({
                url: "/Home/authentification",
                type: "POST",
                data: {
                    "login": login,
                    "password": password
                },
                success: function (result) {
                    if (result.success) {
                        window.location.href = '@Url.Action("admin", "Home")';
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
    </script>
    <style>
        #about {
            margin-top: 100px;
        }
    </style>
</head>
<body>
    <div id="about">
        <h2>Login</h2>

        <form onsubmit="event.preventDefault(); authenticateUser();">
            <div class="imgcontainer">
                <img src="~/imag/illustration-de-login-36025252.jpg" alt="Avatar" class="avatar">
            </div>

            <div class="container">
                <label><b>Username</b></label>
                <input type="text" placeholder="Enter Username" id="in1" required>

                <label><b>Password</b></label>
                <input type="password" placeholder="Enter Password" id="in2" required>

                <button type="submit">Login</button>
            </div>
        </form>
    </div>
</body>
</html>
